# app.py
import streamlit as st
import pickle

# Load model and vectorizer
model = pickle.load(open("model.pkl", "rb"))
vectorizer = pickle.load(open("vectorizer.pkl", "rb"))

# App Title
st.title("ðŸ“° Fake News Detector (AI + ML)")
st.write("Check if a news article is **Real or Fake** using a trained ML model.")

# Input
user_input = st.text_area("Enter News Article Text Here")

# Prediction
if st.button("Check News"):
    if user_input.strip():
        input_vec = vectorizer.transform([user_input])
        prediction = model.predict(input_vec)[0]
        if prediction == 1:
            st.success("âœ… The news appears to be **REAL**.")
        else:
            st.error("ðŸš¨ The news appears to be **FAKE**.")
    else:
        st.warning("Please enter some text to analyze.")

